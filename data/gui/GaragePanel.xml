<Panel name="" fill="true">
	<Image image="town" tmp_fill="wypelnij" align="top" width="650" height="495"/>
	
	<Sprite atlas_name="atlas" sprite_name="upper_board" align="top" margin_top="-60" >
		<Label font="exo_40" align="top" margin_top="150" text="GARAGE" color="255;181;54" size="1.0" />
	</Sprite>
	
	<Panel name="left_panel" align="left" width="409" height="418" >
		<Sprite atlas_name="atlas" align="top" sprite_name="stick" margin_top="120" />
		<AnimButton name="car_paint" align="top-left" width="340" height="116" margin_top="380" margin_left="70" rotate="0.07">
			<Sprite atlas_name="atlas" sprite_name="left_board" />
			<Label font="exo_32" align="center" margin_top="150" text="CAR PAINT" color="255;181;54" size="1.0" />
		</AnimButton>
		<AnimButton name="car_parts" align="top-left" width="340" height="116" margin_top="280" margin_left="30" rotate="-0.1">
			<Sprite atlas_name="atlas" sprite_name="left_board" />
			<Label font="exo_32" align="center" margin_top="150" text="CAR PARTS" color="255;181;54" size="1.0" />
		</AnimButton>
		<AnimButton name="car_dealer" align="top-left" width="340" height="116" margin_top="170" margin_left="50" rotate="0.05">
			<Sprite atlas_name="atlas" sprite_name="left_board" />
			<Label font="exo_32" align="center" margin_top="150" text="CAR DEALER" color="255;181;54" size="1.0" />
		</AnimButton>
	</Panel>
	
	<Panel name="back_panel" align="top-left" margin_left="60" width="100" height="200" >
		<Sprite atlas_name="atlas" align="top" sprite_name="back_board" margin_top="-60" />
		<AnimButton name="back" align="bottom" width="100" height="100" margin_bottom="46" margin_left="0">
			<Sprite atlas_name="atlas" sprite_name="back_glow" />
		</AnimButton>
	</Panel>
	
	<StatusBar name="status_bar" />

	<Panel align="center">
		<ProgressControl title="Acceleration" max_values="6" align="top-left" margin_top="0" />
		<ProgressControl title="Max Speed" max_values="6" align="top-left" margin_top="50" />
		<ProgressControl title="Tires" max_values="6" align="top-left" margin_top="100" />
	</Panel>
	
