<Panel name="hud" fill="true">
	<AnimButton name="turn_left" align="bottom-left" margin_left="30" margin_bottom="40" width="100" height="100" image="arrow_left" image_pushed="arrow_left" />
	<AnimButton name="turn_right" align="bottom-left" margin_left="140" margin_bottom="40" width="100" height="100" image="arrow_right" image_pushed="arrow_right" />
	<AnimButton name="acc_pedal" align="bottom-right" margin_right="30" margin_bottom="40" width="100" height="100" image="arrow_up" image_pushed="arrow_up" />
	<AnimButton name="brake_pedal" align="bottom-right" margin_right="140" margin_bottom="40" width="100" height="100" image="arrow_down" image_pushed="arrow_down" />
	
	<Label name="total_money_label" align="top-right" text="Income:" size="1.0" margin_right="160" margin_top="10" />
	<Label name="total_courses_label" align="top-right" text="Courses:" size="1.0" margin_right="160" margin_top="50" />
	<Label name="total_money_value" align="top-right" text="$0.00" size="1.0" margin_right="10" margin_top="10" />
	<Label name="total_courses_value" align="top-right" text="0" size="1.0" margin_right="10" margin_top="50" />

	<AnimButton name="pause" align="top-left" margin_left="20" margin_top="20" width="52" height="52" image="pause_btn" image_pushed="pause_btn" />	
	<Label name="time_left_value" align="top-left" text="00:00" size="1.0" margin_left="90" margin_top="10" />
	<Label name="reward_value" align="top-left" text="$0" size="1.0" margin_left="90" margin_top="50" />
</Panel>
