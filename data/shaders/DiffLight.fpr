precision lowp float;

uniform sampler2D u_diffTex;

varying lowp vec2 o_coords;
varying lowp vec3 o_normal;
varying lowp vec3 o_lightDirection;

void main()
{
	vec3 normal = normalize(o_normal);
	vec3 lightDirection = normalize(o_lightDirection);
	
	float diffValue = max(dot(lightDirection, normal), 0.3);
	
	gl_FragColor = texture2D(u_diffTex, o_coords) * diffValue;
}

