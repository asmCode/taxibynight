#ifndef _VERTEX_H_
#define _VERTEX_H_

static const char* VERTEX_TEXT =
	"attribute vec3 a_position;\n"
	"attribute vec3 a_normal;\n"
	"\n"
	"uniform mat4 u_mvpMatrix;\n"
	"uniform vec4 u_lightDir;\n"
	"uniform float u_timeStamp;\n"
	"\n"
	"varying float intensity;\n"
	"\n"
	"void main()\n"
	"{\n"
	"    intensity = dot(u_lightDir, vec4(a_normal,1.0));\n"
	"    gl_Position = u_mvpMatrix * vec4(a_position.x + 0.25*sin(3.0*(a_position.z+u_timeStamp)),a_position.y,a_position.z,1.0);\n"
	"}                                                ";

#endif // _VERTEX_H_
